<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CompanyApp.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Placeholder="Username" x:Name=" uname"></Entry>
        <Entry Placeholder="Password" x:Name=" password"></Entry>
        <Button Clicked="Button_Clicked_1" Text="Login"></Button>

    </VerticalStackLayout>
</ContentPage>