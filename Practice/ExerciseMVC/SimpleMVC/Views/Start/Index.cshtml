@using SimpleMVC.Models;
@*@model List<Card>*@
@model List<Card>

@{
	ViewBag.Title = "SimpleMVC - Index";
}
<h1 class="text-center bg-black text-light">My first simple MVC</h1>
<div class="row d-flex flex-wrap justify-content-between gap-3">
@foreach (Card item in Model)
{
    <div class="card" style="width: 18rem;">
        <img src="~/images/@item.Image" class="card-img-top" alt="@item.AlternativeText">
        <div class="card-body">
            <h5 class="card-title">@item.Title</h5>
            <p class="card-text">@item.Text</p>
            <a asp-controller="Card" asp-action="Details" asp-route-id="@item.CardID" class="btn btn-primary">Go to details</a>
        </div>
    </div>

}
</div>